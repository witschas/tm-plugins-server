NODE_ENV="development" # Options: 'development', 'production'
PORT="8080"
HOST="localhost"

# Server URL for file downloads (required for file generation plugins)
# For Render: uses RENDER_EXTERNAL_URL automatically
# For Koyeb: set to your Koyeb app URL (e.g., https://my-app.koyeb.app)
# For local: leave empty or set to http://localhost:3000

# CORS Settings
CORS_ORIGIN="http://localhost:*" # Allowed CORS origin, adjust as necessary

# Rate Limiting
COMMON_RATE_LIMIT_WINDOW_MS="1000" # Window size for rate limiting (ms)
COMMON_RATE_LIMIT_MAX_REQUESTS="20" # Max number of requests per window per IP
